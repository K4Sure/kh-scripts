#!/bin/bash
LOGFILE=~/kh-scripts/logs/csml-test.log
mkdir -p ~/kh-scripts/logs

echo "=== CSML v1.0.0-stable Combined Test Suite ===" | tee $LOGFILE
echo "Started at: $(date)" | tee -a $LOGFILE

echo "[1] Version" | tee -a $LOGFILE
bash ~/kh-scripts/library/symbols/csml_version.sh | tee -a $LOGFILE

echo "[2] Arrows Test" | tee -a $LOGFILE
for sym in arrow_up arrow_down arrow_left arrow_right arrow_both arrow_vert; do
  printf "%-12s -> " "$sym" | tee -a $LOGFILE
  for i in 1 2 3; do
    bash ~/kh-scripts/library/symbols/symbols.sh $sym | tr -d '\n' | tee -a $LOGFILE
    echo -n " " | tee -a $LOGFILE
  done
  echo | tee -a $LOGFILE
done

echo "[3] Stars Test" | tee -a $LOGFILE
for sym in star_full star_empty star_four star_spark; do
  printf "%-12s -> " "$sym" | tee -a $LOGFILE
  for i in 1 2 3; do
    bash ~/kh-scripts/library/symbols/symbols.sh $sym | tr -d '\n' | tee -a $LOGFILE
    echo -n " " | tee -a $LOGFILE
  done
  echo | tee -a $LOGFILE
done

echo "[4] Blocks Test" | tee -a $LOGFILE
for sym in block_full block_half block_mid block_light; do
  printf "%-12s -> " "$sym" | tee -a $LOGFILE
  for i in 1 2 3; do
    bash ~/kh-scripts/library/symbols/symbols.sh $sym | tr -d '\n' | tee -a $LOGFILE
    echo -n " " | tee -a $LOGFILE
  done
  echo | tee -a $LOGFILE
done

echo "[5] Misc Test" | tee -a $LOGFILE
for sym in check cross heart music; do
  printf "%-12s -> " "$sym" | tee -a $LOGFILE
  for i in 1 2 3; do
    bash ~/kh-scripts/library/symbols/symbols.sh $sym | tr -d '\n' | tee -a $LOGFILE
    echo -n " " | tee -a $LOGFILE
  done
  echo | tee -a $LOGFILE
done

echo "[6] Demo Script Output" | tee -a $LOGFILE
bash ~/kh-scripts/library/symbols/symbols-demo.sh | tee -a $LOGFILE
