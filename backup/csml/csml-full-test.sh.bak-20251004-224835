#!/bin/bash
# CSML Full Test Suite v1.2.2
LOG_FILE="$HOME/kh-scripts/logs/csml-test.log"
echo "=== CSML v1.2.2 Combined Test Suite ===" | tee "$LOG_FILE"
echo "Started at: $(date)" | tee -a "$LOG_FILE"
echo "Log file: $LOG_FILE" | tee -a "$LOG_FILE"

echo -e "\n[1] Demo (Colorized if CML present)" | tee -a "$LOG_FILE"
bash "$HOME/kh-scripts/library/symbols/symbols-demo.sh" | tee -a "$LOG_FILE"

echo -e "\n[2] Version Check" | tee -a "$LOG_FILE"
bash "$HOME/kh-scripts/library/symbols/csml-version.sh" | tee -a "$LOG_FILE"

echo -e "\n[3] UTF-8 Validation" | tee -a "$LOG_FILE"
echo "Checking UTF-8 symbols..." | tee -a "$LOG_FILE"
echo "Arrows → ← ↑ ↓ ↔ ↕" | tee -a "$LOG_FILE"
echo "Stars  ★ ☆ ✦ ✧" | tee -a "$LOG_FILE"
echo "Math   ± × ÷ √ π" | tee -a "$LOG_FILE"

echo -e "\n=== Test Complete ===" | tee -a "$LOG_FILE"
