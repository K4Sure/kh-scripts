#!/data/data/com.termux/files/usr/bin/env bash
# dbml_template.sh — example starter template for DBML

DBML_PATH="$HOME/kh-scripts/library/dynamic_box/dynamic_box_master_library.sh"
if [ -f "$DBML_PATH" ]; then
    # shellcheck source=/dev/null
    source "$DBML_PATH"
else
    echo "⚠️ DBML not found at $DBML_PATH"
    exit 1
fi

# Example usage
cml_apply_theme "neon"
draw_box line "DBML Template" "This is a box drawn with DBML." "You can style me with CML."
